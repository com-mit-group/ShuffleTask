<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShuffleTask.Views.TasksPage"
             Title="Tasks">
    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="AddToolbar" Text="+" Priority="0" Order="Primary" />
    </ContentPage.ToolbarItems>

    <CollectionView x:Name="TasksList"
                    ItemsSource="{Binding TaskRows}"
                    SelectionMode="None">
        <CollectionView.EmptyView>
            <VerticalStackLayout Padding="24" Spacing="12" HorizontalOptions="Center" VerticalOptions="Center">
                <Label Text="No tasks yet" FontSize="18" />
                <Label Text="Tap + to add your first task" FontSize="14" />
            </VerticalStackLayout>
        </CollectionView.EmptyView>
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <SwipeView>
                    <SwipeView.RightItems>
                        <SwipeItems Mode="Reveal">
                            <SwipeItem Text="Edit" BackgroundColor="#2d9cdb" CommandParameter="{Binding Item}" Invoked="OnEditSwipe" />
                            <SwipeItem Text="Pause/Resume" BackgroundColor="#f2c94c" CommandParameter="{Binding Item}" Invoked="OnPauseResumeSwipe" />
                            <SwipeItem Text="Delete" BackgroundColor="#eb5757" CommandParameter="{Binding Item}" Invoked="OnDeleteSwipe" />
                        </SwipeItems>
                    </SwipeView.RightItems>
                    <Grid Padding="12" ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto" >
                        <Label Grid.Row="0" Grid.ColumnSpan="2" Text="{Binding Item.Title}" FontSize="18" FontAttributes="Bold" />
                        <HorizontalStackLayout Grid.Row="1" Spacing="6">
                            <Border StrokeShape="RoundRectangle 8"><Label Margin="6,2" Text="{Binding RepeatChip}"/></Border>
                            <Border StrokeShape="RoundRectangle 8"><Label Margin="6,2" Text="{Binding AllowedChip}"/></Border>
                        </HorizontalStackLayout>
                        <Label Grid.Row="2" Text="{Binding NextDue}" FontSize="12" TextColor="Gray" />
                    </Grid>
                </SwipeView>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>