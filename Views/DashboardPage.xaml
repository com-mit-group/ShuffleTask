<?xml version="1.0" encoding="utf-8"?>
<?xaml-comp compile="true"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ShuffleTask.ViewModels"
             x:Class="ShuffleTask.Views.DashboardPage"
             x:DataType="vm:DashboardViewModel"
             Title="Dashboard">

    <Grid Padding="24"
          RowSpacing="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Highlight the current task inside a simple card -->
        <Border Grid.Row="0"
                BackgroundColor="{StaticResource Gray100}"
                Padding="18">
            <Grid RowSpacing="12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Label FontSize="28"
                       LineBreakMode="WordWrap"
                       Padding="12"
                       Text="{Binding CurrentTask.Title}"
                       BackgroundColor="#E6D078"
                       HorizontalTextAlignment="Center"
                       VerticalTextAlignment="Center" />

                <Label Grid.Row="1"
                       FontSize="16"
                       LineBreakMode="WordWrap"
                       Padding="12"
                       Text="{Binding CurrentTask.Description}"
                       BackgroundColor="#E6D078"
                       HeightRequest="160" />

                <Label Grid.Row="2"
                       FontSize="12"
                       HorizontalOptions="Center"
                       Text="{Binding CurrentTask.Deadline, StringFormat='Deadline / Repeating schedule: {0:yyyy-MM-dd HH:mm}', TargetNullValue='No deadline'}" />
            </Grid>
        </Border>

        <Label Grid.Row="1"
               FontSize="64"
               HorizontalOptions="Center"
               Text="{Binding CountdownText}" />

        <Grid Grid.Row="2"
              ColumnSpacing="12"
              HorizontalOptions="Center"
              Padding="6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    WidthRequest="110"
                    Command="{Binding DoneCommand}"
                    Text="Done"
                    BackgroundColor="#E6D078"
                    TextColor="Black" />

            <Button Grid.Column="1"
                    WidthRequest="110"
                    Command="{Binding SnoozeCommand}"
                    Text="Snooze"
                    BackgroundColor="{StaticResource Gray200}"
                    TextColor="Black" />

            <Button Grid.Column="2"
                    WidthRequest="110"
                    x:Name="ShuffleButton"
                    Command="{Binding ShuffleCommand}"
                    Text="Shuffle"
                    BackgroundColor="{StaticResource Gray200}"
                    TextColor="Black" />
        </Grid>
    </Grid>
</ContentPage>