<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ShuffleTask.ViewModels"
             x:Class="ShuffleTask.Views.DashboardPage"
             x:DataType="vm:DashboardViewModel"
             Title="Dashboard">

    <Grid RowDefinitions="Auto,Auto,*" Padding="24" RowSpacing="24" >

        <!-- Large card container -->
        <Grid RowDefinitions="Auto,Auto,*" Grid.Row="0" Padding="18" BackgroundColor="{StaticResource Gray100}">
            <Label Text="{Binding CurrentTask.Title}" FontSize="28" Padding="12" BackgroundColor="#E6D078" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" LineBreakMode="WordWrap" />

                <!-- Description block -->
            <Label Grid.Row="1" Text="{Binding CurrentTask.Description}" FontSize="16" LineBreakMode="WordWrap" Padding="12" BackgroundColor="#E6D078" HeightRequest="160" />

                <!-- Deadline / schedule -->
            <Label Grid.Row="2" Text="{Binding CurrentTask.Deadline, StringFormat='Deadline / Repeating schedule: {0:yyyy-MM-dd HH:mm}', TargetNullValue='No deadline'}" FontSize="12" HorizontalOptions="Center" />

        </Grid>

        <!-- Timer centered -->
        <Label Grid.Row="1" Text="{Binding CountdownText}" FontSize="64" HorizontalOptions="Center" />

        <!-- Buttons row - Done highlighted, others neutral -->
        <HorizontalStackLayout Grid.Row="2" Spacing="12" HorizontalOptions="Center" Padding="6">
            <Button Text="Done" Command="{Binding DoneCommand}" BackgroundColor="#E6D078" TextColor="Black" WidthRequest="110" />
            <Button Text="Snooze" Command="{Binding SnoozeCommand}" BackgroundColor="{StaticResource Gray200Brush}" TextColor="Black" WidthRequest="110" />
            <Button Text="Shuffle" x:Name="ShuffleButton" Command="{Binding ShuffleCommand}"  BackgroundColor="{StaticResource Gray200Brush}" TextColor="Black" WidthRequest="110" />
        </HorizontalStackLayout>
    </Grid>
</ContentPage>