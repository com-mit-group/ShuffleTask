<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShuffleTask.Views.SettingsPage"
             Title="Settings">
    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="12">
            <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto">
                <Label Grid.Row="0" Text="Work Start" />
                <TimePicker Grid.Row="0" Grid.Column="1" Time="{Binding Settings.WorkStart}" />

                <Label Grid.Row="1" Text="Work End" />
                <TimePicker Grid.Row="1" Grid.Column="1" Time="{Binding Settings.WorkEnd}" />

                <Label Grid.Row="2" Text="Reminder (min)" />
                <Stepper Grid.Row="2" Grid.Column="1" Minimum="5" Maximum="240" Increment="5" Value="{Binding Settings.ReminderMinutes}" />

                <Label Grid.Row="3" Text="Min Gap (min)" />
                <Stepper Grid.Row="3" Grid.Column="1" Minimum="5" Maximum="240" Increment="5" Value="{Binding Settings.MinGapMinutes}" />

                <Label Grid.Row="4" Text="Max Gap (min)" />
                <Stepper Grid.Row="4" Grid.Column="1" Minimum="5" Maximum="480" Increment="5" Value="{Binding Settings.MaxGapMinutes}" />

                <Label Grid.Row="5" Text="Notifications" />
                <Switch Grid.Row="5" Grid.Column="1" IsToggled="{Binding Settings.EnableNotifications}" />

                <Label Grid.Row="6" Text="Sound On" />
                <Switch Grid.Row="6" Grid.Column="1" IsToggled="{Binding Settings.SoundOn}" />

                <Label Grid.Row="7" Text="Active" />
                <Switch Grid.Row="7" Grid.Column="1" IsToggled="{Binding Settings.Active}" />

                <Label Grid.Row="8" Text="Streak Bias" />
                <Grid Grid.Row="8" Grid.Column="1" ColumnDefinitions="*,Auto">
                    <Slider x:Name="StreakSlider" Minimum="0" Maximum="1" Value="{Binding Settings.StreakBias}" />
                    <Label Grid.Column="1" Margin="8,0,0,0" VerticalOptions="Center" Text="{Binding Source={x:Reference StreakSlider}, Path=Value, StringFormat='{}{0:0.00}'}" />
                </Grid>

                <Label Grid.Row="9" Text="Stable randomness per day" />
                <Switch Grid.Row="9" Grid.Column="1" IsToggled="{Binding Settings.StableRandomnessPerDay}" />
            </Grid>

            <HorizontalStackLayout>
                <Button Text="Save" Command="{Binding SaveCommand}" />
                <Button Text="Shuffle Now" Command="{Binding ShuffleNowCommand}" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>