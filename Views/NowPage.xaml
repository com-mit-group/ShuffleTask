<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShuffleTask.Views.NowPage"
             Title="Now">
    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="16">
            <Frame CornerRadius="12" Padding="16" BackgroundColor="{DynamicResource CardBackgroundColor}">
                <VerticalStackLayout Spacing="8">
                    <Label Text="{Binding CurrentTask.Title}" FontSize="22" FontAttributes="Bold" LineBreakMode="WordWrap" />
                    <HorizontalStackLayout Spacing="4">
                        <Label Text="Importance:"/>
                        <Label Text="{Binding CurrentTask.Importance}"/>
                    </HorizontalStackLayout>
                    <Label Text="{Binding CurrentTask.Deadline, StringFormat='Deadline: {0:yyyy-MM-dd HH:mm}', TargetNullValue='No deadline'}" />
                    <Label Text="{Binding CurrentTask.AllowedPeriod, StringFormat='Allowed: {0}'}" />
                </VerticalStackLayout>
            </Frame>

            <Label Text="{Binding CountdownText}" FontSize="64" HorizontalOptions="Center" />

            <HorizontalStackLayout Spacing="12" HorizontalOptions="Center">
                <Button Text="Done" Command="{Binding DoneCommand}" />
                <Button Text="Snooze 15m" Command="{Binding SnoozeCommand}" />
                <Button Text="Skip" Command="{Binding SkipCommand}" />
                <Button Text="Shuffle" x:Name="ShuffleButton" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>