<?xml version="1.0" encoding="utf-8"?>
<?xaml-comp compile="true"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ShuffleTask.ViewModels"
             xmlns:controls="clr-namespace:ShuffleTask.Controls"
             x:Class="ShuffleTask.Views.EditTaskPage"
             x:DataType="vm:EditTaskViewModel"
             Title="Task">
    <ScrollView>
        <Grid Padding="20"
              RowSpacing="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Entry Grid.Row="0"
                   Text="{Binding Title}"
                   Placeholder="Title" />

            <Editor Grid.Row="1"
                    HeightRequest="120"
                    Placeholder="Description"
                    Text="{Binding Description}" />

            <Grid Grid.Row="2"
                  ColumnDefinitions="Auto,*"
                  ColumnSpacing="12">
                <Label Text="Importance"
                       VerticalOptions="Center" />
                <controls:NumericStepper Grid.Column="1"
                                         Minimum="1"
                                         Maximum="5"
                                         Increment="1"
                                         Value="{Binding Importance}"
                                         HorizontalOptions="Start" />
            </Grid>

            <Grid Grid.Row="3"
                  ColumnDefinitions="Auto,*,Auto"
                  ColumnSpacing="12">
                <Label Text="Size (pts)"
                       VerticalOptions="Center" />
                <Stepper Grid.Column="1"
                         Minimum="0.5"
                         Maximum="13"
                         Increment="0.5"
                         Value="{Binding SizePoints}" />
                <Label Grid.Column="2"
                       Text="{Binding SizePoints, StringFormat='{0:0.#}'}"
                       VerticalOptions="Center" />
            </Grid>

            <Grid Grid.Row="4"
                  RowDefinitions="Auto,Auto,Auto"
                  RowSpacing="8">
                <Grid Grid.Row="0"
                      ColumnDefinitions="Auto,Auto"
                      ColumnSpacing="12">
                    <Label Text="Deadline"
                           VerticalOptions="Center" />
                    <Switch Grid.Column="1"
                            IsToggled="{Binding HasDeadline}" />
                </Grid>

                <Grid Grid.Row="1"
                      ColumnDefinitions="*,*"
                      ColumnSpacing="12">
                    <DatePicker Grid.Column="0"
                                Date="{Binding DeadlineDate}"
                                IsEnabled="{Binding HasDeadline}" />
                    <TimePicker Grid.Column="1"
                                Time="{Binding DeadlineTime}"
                                IsEnabled="{Binding HasDeadline}" />
                </Grid>

                <Button Grid.Row="2"
                        Text="Clear deadline"
                        IsEnabled="{Binding HasDeadline}"
                        Clicked="OnClearDeadline" />
            </Grid>

            <Picker Grid.Row="5"
                    Title="Repeat"
                    ItemsSource="{Binding RepeatOptions}"
                    SelectedItem="{Binding Repeat}" />

            <Grid Grid.Row="6"
                  IsVisible="False"
                  RowSpacing="8">
                <Grid.Triggers>
                    <DataTrigger TargetType="Grid"
                                Binding="{Binding Repeat}"
                                Value="Weekly">
                        <Setter Property="IsVisible" Value="True" />
                    </DataTrigger>
                </Grid.Triggers>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Label Grid.Row="0"
                       Text="Weekdays" />
                <Grid Grid.Row="1"
                      RowDefinitions="Auto,Auto"
                      ColumnDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto"
                      ColumnSpacing="8">
                    <CheckBox Grid.Row="0" Grid.Column="0" IsChecked="{Binding Sunday}" />
                    <CheckBox Grid.Row="0" Grid.Column="1" IsChecked="{Binding Monday}" />
                    <CheckBox Grid.Row="0" Grid.Column="2" IsChecked="{Binding Tuesday}" />
                    <CheckBox Grid.Row="0" Grid.Column="3" IsChecked="{Binding Wednesday}" />
                    <CheckBox Grid.Row="0" Grid.Column="4" IsChecked="{Binding Thursday}" />
                    <CheckBox Grid.Row="0" Grid.Column="5" IsChecked="{Binding Friday}" />
                    <CheckBox Grid.Row="0" Grid.Column="6" IsChecked="{Binding Saturday}" />
                    <Label Grid.Row="1" Grid.Column="0" Text="Sun" HorizontalOptions="Center" />
                    <Label Grid.Row="1" Grid.Column="1" Text="Mon" HorizontalOptions="Center" />
                    <Label Grid.Row="1" Grid.Column="2" Text="Tue" HorizontalOptions="Center" />
                    <Label Grid.Row="1" Grid.Column="3" Text="Wed" HorizontalOptions="Center" />
                    <Label Grid.Row="1" Grid.Column="4" Text="Thu" HorizontalOptions="Center" />
                    <Label Grid.Row="1" Grid.Column="5" Text="Fri" HorizontalOptions="Center" />
                    <Label Grid.Row="1" Grid.Column="6" Text="Sat" HorizontalOptions="Center" />
                </Grid>
            </Grid>

            <Grid Grid.Row="7"
                  ColumnDefinitions="Auto,*"
                  ColumnSpacing="12"
                  IsVisible="False">
                <Grid.Triggers>
                    <DataTrigger TargetType="Grid"
                                Binding="{Binding Repeat}"
                                Value="Interval">
                        <Setter Property="IsVisible" Value="True" />
                    </DataTrigger>
                </Grid.Triggers>
                <Label Text="Every"
                       VerticalOptions="Center" />
                <controls:NumericStepper Grid.Column="1"
                                         Minimum="1"
                                         Maximum="30"
                                         Increment="1"
                                         Value="{Binding IntervalDays}"
                                         HorizontalOptions="Start" />
            </Grid>

            <Picker Grid.Row="8"
                    Title="Allowed period"
                    ItemsSource="{Binding AllowedPeriodOptions}"
                    SelectedItem="{Binding AllowedPeriod}" />

            <Grid Grid.Row="9"
                  ColumnDefinitions="Auto,Auto"
                  ColumnSpacing="12">
                <Label Text="Auto-shuffle allowed"
                       VerticalOptions="Center" />
                <Switch Grid.Column="1"
                        IsToggled="{Binding AutoShuffleAllowed}" />
            </Grid>

            <Grid Grid.Row="10"
                  RowDefinitions="Auto,Auto"
                  RowSpacing="8"
                  IsVisible="False">
                <Grid.Triggers>
                    <DataTrigger TargetType="Grid"
                                Binding="{Binding AllowedPeriod}"
                                Value="Custom">
                        <Setter Property="IsVisible" Value="True" />
                    </DataTrigger>
                </Grid.Triggers>
                <Label Grid.Row="0"
                       Text="Custom time range" />
                <Grid Grid.Row="1"
                      ColumnDefinitions="*,*"
                      ColumnSpacing="12">
                    <TimePicker Grid.Column="0"
                                Time="{Binding CustomStartTime}" />
                    <TimePicker Grid.Column="1"
                                Time="{Binding CustomEndTime}" />
                </Grid>
            </Grid>

            <Grid Grid.Row="11"
                  ColumnDefinitions="Auto,Auto"
                  ColumnSpacing="12">
                <Label Text="Paused"
                       VerticalOptions="Center" />
                <Switch Grid.Column="1"
                        IsToggled="{Binding IsPaused}" />
            </Grid>

            <!-- Custom Timer Override Section -->
            <Grid Grid.Row="12"
                  RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto"
                  RowSpacing="8">
                <Grid Grid.Row="0"
                      ColumnDefinitions="Auto,Auto"
                      ColumnSpacing="12">
                    <Label Text="Override Timer Settings"
                           VerticalOptions="Center"
                           FontAttributes="Bold" />
                    <Switch Grid.Column="1"
                            IsToggled="{Binding UseCustomTimer}" />
                </Grid>

                <Grid Grid.Row="1"
                      IsVisible="{Binding UseCustomTimer}"
                      ColumnDefinitions="Auto,*"
                      ColumnSpacing="12">
                    <Label Text="Timer Mode"
                           VerticalOptions="Center" />
                    <Picker Grid.Column="1"
                            ItemsSource="{Binding TimerModeOptions}"
                            SelectedIndex="{Binding CustomTimerMode}" />
                </Grid>

                <Grid Grid.Row="2"
                      IsVisible="{Binding UseCustomTimer}"
                      ColumnDefinitions="Auto,*,Auto"
                      ColumnSpacing="12">
                    <Label Text="Reminder (min)"
                           VerticalOptions="Center" />
                    <Stepper Grid.Column="1"
                             Minimum="1"
                             Maximum="360"
                             Increment="5"
                             Value="{Binding CustomReminderMinutes}" />
                    <Label Grid.Column="2"
                           Text="{Binding CustomReminderMinutes, StringFormat='{0:0}'}"
                           VerticalOptions="Center" />
                </Grid>

                <Grid Grid.Row="3"
                      IsVisible="{Binding UseCustomTimer}"
                      ColumnDefinitions="Auto,*,Auto"
                      ColumnSpacing="12">
                    <Label Text="Focus (min)"
                           VerticalOptions="Center" />
                    <Stepper Grid.Column="1"
                             Minimum="5"
                             Maximum="120"
                             Increment="5"
                             Value="{Binding CustomFocusMinutes}" />
                    <Label Grid.Column="2"
                           Text="{Binding CustomFocusMinutes, StringFormat='{0:0}'}"
                           VerticalOptions="Center" />
                </Grid>

                <Grid Grid.Row="4"
                      IsVisible="{Binding UseCustomTimer}"
                      ColumnDefinitions="Auto,*,Auto"
                      ColumnSpacing="12">
                    <Label Text="Break (min)"
                           VerticalOptions="Center" />
                    <Stepper Grid.Column="1"
                             Minimum="1"
                             Maximum="60"
                             Increment="1"
                             Value="{Binding CustomBreakMinutes}" />
                    <Label Grid.Column="2"
                           Text="{Binding CustomBreakMinutes, StringFormat='{0:0}'}"
                           VerticalOptions="Center" />
                </Grid>

                <Grid Grid.Row="5"
                      IsVisible="{Binding UseCustomTimer}"
                      ColumnDefinitions="Auto,*,Auto"
                      ColumnSpacing="12">
                    <Label Text="Pomodoro Cycles"
                           VerticalOptions="Center" />
                    <Stepper Grid.Column="1"
                             Minimum="1"
                             Maximum="8"
                             Increment="1"
                             Value="{Binding CustomPomodoroCycles}" />
                    <Label Grid.Column="2"
                           Text="{Binding CustomPomodoroCycles, StringFormat='{0:0}'}"
                           VerticalOptions="Center" />
                </Grid>
            </Grid>

            <Grid Grid.Row="13"
                  ColumnDefinitions="*,*"
                  ColumnSpacing="16">
                <Button Grid.Column="0"
                        Text="Save"
                        Command="{Binding SaveCommand}" />
                <Button Grid.Column="1"
                        Text="Cancel"
                        Clicked="OnCancelClicked" />
            </Grid>

            <ActivityIndicator Grid.Row="14"
                               IsVisible="{Binding IsBusy}"
                               IsRunning="{Binding IsBusy}"
                               HorizontalOptions="Center" />
        </Grid>
    </ScrollView>
</ContentPage>
